@page
@model EmployeeManagementRazor.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}
<h1>All Users</h1>

@if (Model.Users.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-area="Identity" asp-page="/Account/Register">
        Add new user
    </a>

    foreach (var user in Model.Users)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <a asp-page="edit" asp-route-userId="@user.Id" class="btn btn-danger">Edit</a>
                <a asp-page="delete" asp-route-userId="@user.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-area="Identity" asp-page="/Account/Register">
                Add new user
            </a>
        </div>
    </div>
}