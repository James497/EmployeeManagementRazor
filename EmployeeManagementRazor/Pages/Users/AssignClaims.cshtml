@page
@model EmployeeManagementRazor.Pages.Users.AssignClaimsModel
@{
    ViewData["Title"] = "Assign User Claims";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.userClaimsViewModel.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.userClaimsViewModel.UserId" />
                    <input type="hidden" asp-for="@Model.userClaimsViewModel.Claims[i].ClaimType" />
                    <input asp-for="@Model.userClaimsViewModel.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.userClaimsViewModel.Claims[i].IsSelected">
                        @Model.userClaimsViewModel.Claims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-page="edit" asp-route-userId="@Model.UserId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>