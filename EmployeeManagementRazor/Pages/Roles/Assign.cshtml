@page
@model EmployeeManagementRazor.Pages.Roles.AssignModel
@{
    ViewData["Title"] = "Assign Role";
}
@if(Model.UsersInRole.Any())
{
    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>Add or remove users from this role</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.UsersInRole.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.UsersInRole[i].UserId" />
                        <input type="hidden" asp-for="@Model.UsersInRole[i].UserName" />
                        <input asp-for="@Model.UsersInRole[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.UsersInRole[i].IsSelected">
                            @Model.UsersInRole[i].UserName
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Save" class="btn btn-primary"
                       style="width:auto" />
                <a asp-page="edit" asp-route-id="@Model.RoleId"
                   class="btn btn-primary" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>
}
else
{
    <h3>No users found to assign to current role</h3>
}
