@page
@model EmployeeManagementRazor.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "All Roles";
}
@if (Model.Roles.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-page="edit">Add new role</a>

    foreach (var role in Model.Roles)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-page="edit" asp-route-ID="@role.Id" class="btn btn-primary">Edit</a>
                <a asp-page="delete" asp-route-roleId="@role.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto"
           asp-page="edit">
                Create Role
            </a>
        </div>
    </div>
}